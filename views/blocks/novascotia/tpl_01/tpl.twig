<div class="woody-component woody-component-novascotia isRel tpl_01 {{ background_color|default }} {{ border_color|default }} {{ background_img_opacity|default }}{{ background_img ? ' has-bgimg' }}">
    {% if background_img %}
        <div class="backgroundMedia fullcenterbox" style="background-image: url('{{ background_img.url }}'); background-size:cover; background-position:center center;"></div>
        <div class="content isRel">
        {% endif %}

        <div class="gallery-wrapper">
            <div class="woodyGallery grid-x{{ sw_no_padding == 0 ? ' grid-padding-x grid-padding-y' }}" itemscope="itemscope" itemtype="http://schema.org/ImageGallery">
                <div class="cell medium-6 large-4 flex-container flex-dir-column align-center align-middle">
                    {% if icon|default or pretitle|default or title|default or subtitle|default or description|default %}
                        <div class="block-header padd-all-md">
                            {% include '_objects/titlesObject.twig' with {
                                'titles' : _context,
                                'contextPrefix' : "socialwall",
                                'flexOptions' : "flex-container flex-dir-column align-middle align-center text-center"
                            } %}
                        </div>
                    {% endif %}
                </div>

                {% if gallery_items|default %}
                    {% set grid_length = (gallery_items|length / 5)|round(0, 'ceil') %}
                    {% set quadri_start = 0 %}
                    {% set simple_start = 4 %}

                    {% for i in 0..grid_length %}
                        <div class="cell medium-6 large-4">
                            <div class="grid-x small-up-2{{ sw_no_padding == 0 ? ' grid-padding-x grid-padding-y' }}">
                                {% for item in gallery_items[quadri_start:4]%}
                                    <div class="cell">
                                        {% include 'cards/media_card/tpl_01/tpl.twig' with {
                                            'containerClass' : "socialwall",
                                            'reveal' : true
                                        } %}
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                        <div class="cell medium-6 large-4">
                                {% for item in gallery_items[simple_start:1]%}
                                <div class="cell">
                                    {% include 'cards/media_card/tpl_01/tpl.twig' with {
                                        'containerClass' : "socialwall",
                                        'reveal' : true
                                    } %}
                                </div>
                            {% endfor %}
                        </div>
                        {% set quadri_start = quadri_start + 5 %}
                        {% set simple_start = simple_start + 5 %}
                    {% endfor %}


                {% endif %}

            </div>
        </div>
        {% if background_img %}
        </div>
    {% endif %}
</div>
