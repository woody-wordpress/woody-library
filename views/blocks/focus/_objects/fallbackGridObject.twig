        {% include 'lists/bases_grid/tpl_301/tpl.twig' with {
            block_titles: false
        } %}
    {% elseif items|length == 4 or items|length == 8 %}
        {% include 'lists/bases_grid/tpl_401/tpl.twig' with {
            block_titles: false
        } %}
    {% elseif items|length == 5 %}
        {% include 'lists/bases_grid/tpl_501/tpl.twig' with {
            block_titles: false
        } %}
    {% elseif items|length == 7 %}
        {% include 'lists/bases_grid/tpl_601/tpl.twig' with {
            block_titles: false
        } %}
    {% endif %}
{% endif %}
