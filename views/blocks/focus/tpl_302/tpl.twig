{% set swiperOut = 3 %}
{% set customClasses = customClasses|default('isRel') %}
{% extends '_objects/bgParamsObject.twig' %}
{% block woodyBlockType %}focus{% endblock %}
{% block indexClass %}{{ customIndexClass|default('302') }}{% endblock %}
{% block woodyComponentContent %}
    {% set swiper_options = {
        'slidesPerView' : slidesPerView|default(3),
        'spaceBetween' : spaceBetween,
        'initialSlide': customInitialSlide|default(0),
        'centeredSlides': customCenterSlides|default(false),
        'breakpoints' : {
            1024 : {
                'slidesPerView' : 2,
                'centeredSlides': false,
                'initialSlide' : 0
            },
            767 : {
                'slidesPerView' : 1,
                'centeredSlides': false,
                'initialSlide' : 0
            },
        }
    }%}
    {% include 'blocks/focus/_objects/basicWithSwiper.twig' with {
        'card' : customCard|default("overlayed_card/tpl_01"),
        'image_style' : customImageStyle|default("ratio_square"),
        'fallbackMaxLength' : 3,
        'styleClass' : customSwiperStyleClass|default,
        'swiperCustomClasses': swiperCustomClasses|default(""),
        'isRel': true
    } %}
{% endblock %}

