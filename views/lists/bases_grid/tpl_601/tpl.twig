{% if is_list %}
    <li class="grid-container">
    {% endif %}
    {% if menu_part_title_link or menu_part_title %}
    <span class="menuPart-title">
        {% if menu_part_title_link|default %}<a href="{{ menu_part_title_link }}">{% endif %}
            {{ menu_part_title }}
            {% if menu_part_title_link|default %}</a>{% endif %}
    </span>
    {% endif %}
    {% if empty|default %}
        <div class="bg-lightgray padd-all-sm flex-container">
            <span class="h5 align-center align-middle">{{ empty }}</span>
        </div>
    {% endif %}

    <div class="woody_base_grid_wrapper{{ swResp ? ' woody-mobile-swiper swiper-container swResp' }}" {% if nb_columns > 1 and swResp %}data-columns="{{nb_columns}}"{% endif %}>
        <div class="{% block grid_class %}woody_bases_grid tpl_601{% endblock %} small-up-2 medium-up-3 large-up-6 align-stretch grid-x{{ swResp ? ' swRespW' }}{{ no_padding == 0 ? ' grid-padding-x grid-padding-y' }}">
            {% if items|default %}
                {% for key, item in items %}
                    <div class="cell{{ swResp ? ' swRespS' }}{{ nb_columns > 1 and not swResp ? ' small-6 medium-auto'}}">
                        {% block the_card %}
                            {% include "cards/#{card}/tpl.twig" with {
                            'desequalize' : desequalize,
                            'image_style' : image_style,
                            'page_type' : item.page_type,
                            'ellipsis': item.ellipsis|default(false),
                            'card_index':key + 1
                        } %}
                        {% endblock %}
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
    {% if is_list %}
    </li>
{% endif %}
