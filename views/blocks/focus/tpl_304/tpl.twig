{% if no_padding == 0 %}{% set spaceBetween = 30 %}
{% else %}{% set spaceBetween = 0 %}
{% endif %}

{% extends '_objects/visualModifier.twig' %}
{% block content %}
<div class="woody-component woody-component-focus tpl_304 {{ items|length > 3 ? ' isRel swiperOut' : ' swResp' }}" data-equalizer data-equalize-on="small">
    {% if items|length == 1 %}
        {% include 'lists/bases_grid/tpl_101/tpl.twig' with {
            'items' : items,
            'card' : "basic_card/tpl_01",
            'image_style' : "ratio_16_9"
        } %}
    {% elseif items|length == 2 %}
        {% include 'lists/bases_grid/tpl_201/tpl.twig' with {
            'items' : items,
            'card' : "basic_card/tpl_01",
            'image_style' : "ratio_16_9",
            'swResp' : true
        } %}
    {% elseif items|length == 3 %}
        {% include 'lists/bases_grid/tpl_301/tpl.twig' with {
            'items' : items,
            'card' : "basic_card/tpl_01",
            'image_style' : "ratio_16_9",
            'swResp' : true
        } %}
    {% elseif items|length > 3 %}
        {% set swiper_options = {
            'slidesPerView' : 3,
            'spaceBetween' : spaceBetween,
            'centeredSlides' : false,
            'initialSlide' : 0,
            'breakpoints' : {
                1024 : {
                    'slidesPerView' : 2,
                },
                640 : {
                    'slidesPerView' : 1,
                },
            }
        }%}
        {% set json_swiper_options = swiper_options | json_encode | e('html_attr') %}
        {% include 'swipers/basic_swiper/tpl_01/tpl.twig' with {
            'items' : items,
            'image_style' : "ratio_16_9",
            'card' : "basic_card/tpl_01",
            'swiper_options' : json_swiper_options
        } %}
    {% endif %}
</div>
{% endblock %}
