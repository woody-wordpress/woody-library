{% if formated_object.sitSourceData|default %}
<li id="li-sit-source" class="sit-source-data">
{% set inPanelSection = false %}
{% if inPanelSection|default %}<section class="panel panel-default">{% endif %}

        <div class="panel-body text-center">
        {% if formated_object.sitSourceData.logo|default %}
            <img src="{{ formated_object.sitSourceData.logo }}" class="responsive-img" alt="{{ formated_object.sitSourceData.sourceIdentifier|default(formated_object.sitSourceData.logo) }}" />
        {% endif %}

        {% if formated_object.sitSourceData.modified|default and formated_object.sitSourceData.creator|default %}
            <div>
                {{ 'GLOBAL.UPDATED_ON'|trans}} {{ formated_object.sitSourceData.modified|date("Y-m-d")|localizeddate('long', 'none', lang) }}
                {{ 'GLOBAL.AT'|trans }} {{ formated_object.sitSourceData.modified|date("H:i:s")| localizeddate('none', 'short', lang) }}
            </div>
            <div>
                {{ 'GLOBAL.BY'|trans }} {{ formated_object.sitSourceData.creator }}
            </div>
        {% endif %}
        {% if formated_object.sitSourceData.sourceIdentifier|default %}
            <div>({{ 'GLOBAL.OFFER_ID'|trans }}: {{ formated_object.sitSourceData.sourceIdentifier }})</div>
        {% endif %}
        </div>
{% if inPanelSection %}</section>{% endif %}
</li>
{% endif %}
