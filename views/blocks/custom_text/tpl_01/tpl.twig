{% extends '_objects/genericBlocComponent.twig' %}
{% block woodyBlockType %}custom-text{% endblock %}
{% block indexClass %}{{ customIndexClass|default('01') }}{% endblock %}
{% set customClasses = show_more_button ? 'has-show-more-button' : '' %}
{% block woodyComponentContent %}
    <div class="grid-x{{ custom_text_no_padding ? '' : ' grid-padding-x' }}{{ background_img ? ' isRel'}}">
        <div class="cell">
            {% include '_objects/genericBlocTitles.twig' with {
                display: display_block_titles|default(),
                margin: block_titles_margin|default('marg-bottom-md')
            } %}
            {{ text|default }}
            {% include '_objects/buttonBlock.twig' with {
                block_buttons: block_titles.generic_buttons
            } %}
        </div>
    </div>
{% endblock %}
