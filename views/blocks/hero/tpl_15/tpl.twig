<div
    class="woody-component woody-component-hero {{ classes|default }} {% block index_class %}tpl_15 hero-full-height hero-blog-header{% endblock %} isRel {{ page_heading_background_img_opacity|default }} {% if page_heading_img or page_heading_movie.movie_poster_file|default %} bg-black has-bgimg{% endif %}{% if parallax %} parallax-hero{% endif %}{% if blur %} hero-blur{% endif %}">
    {% block heroText %}
    <div class="titles-container flex-container flex-dir-column align-center isRel">
        {% if parallax %}<div class="rellax" data-rellax-speed="2">{% endif %}
            {% include '_objects/titlesObject.twig' with {
            'titles' : _context,
            'contextPrefix' : "hero",
            'flexOptions' : "flex-container flex-dir-column align-middle text-center marg-bottom-md"
            } %}
            {% if parallax %}</div>{% endif %}

        {% block tagsList %}
        {% if page_heading_tags %}
        <ul class="list-unstyled flex-container align-middle align-right tagslist isAbs">
            {% for tag in page_heading_tags %}
            <li class="tagslist-item">{{ tag.label }}</li>
            {% endfor %}
        </ul>
        {% endif %}
        {% endblock %}
    </div>
    {% endblock %}

    {% if page_heading_img or page_heading_movie.movie_poster_file|default %}
    <div
        class="hero-bg backgroundMedia {{ page_heading_media_type|default }}{{ page_heading_more_imgs.display_imgs and page_heading_more_imgs.imgs ? ' isRel'}}">
        {% if parallax %}<div class="rellax" data-rellax-speed="-4">{% endif %}

            {% if page_heading_media_type == 'img' and page_heading_img.filename|default %}
            {% if desktopImgSize is not defined %}
            {% set desktopImgSize = 'ratio_3_1' %}
            {% endif %}
            {% include "_objects/imageObject.twig" with {
            'img' : page_heading_img,
            'tiny_square' : page_heading_img.sizes.ratio_square_medium,
            'img_mobile_url' : mobile_page_heading_img.sizes.ratio_square_medium,
            'image_style' : desktopImgSize
            } %}
            {% elseif page_heading_media_type == 'movie'|default %}
            {% block heroVideo %}
            {% include '_objects/videoObject.twig' with {
            'movie' : page_heading_movie,
            'image_style' : "ratio_3_1",
            'containerClass' : "heroMediaWrapper",
            'ratio' : "3",
            'autoplay': true,
            'loop': true,
            'muted' : true,
            'playsinline' : true
            } %}
            {% endblock %}
            {% endif %}

            {% if parallax %}</div>{% endif %}

        {% block moreImgs %}
        {% if page_heading_more_imgs.display_imgs and page_heading_more_imgs.imgs %}
        {% include 'blocks/hero/_objects/more_imgs_list.twig' with {
        'items' : page_heading_more_imgs.imgs,
        'moreImgsMaxItems' : moreImgsMaxItems|default(3)
        }%}
        {% endif %}
        {% endblock %}
    </div>
    {% endif %}

    {% if page_heading_add_social_movie and page_heading_social_movie|default %}
    <div class="toggling-movie-container{{ page_heading_social_movie ? ' embed-plyr' }}">
        <div class="movie-toggle">
            <span class="toggle-icon"></span>
            <span class="toggle-text">{{ __("Voir la vid√©o", 'woody-theme') }}</span>
        </div>
        <div class="hidden toggling-movie">
            <div class="heroPlyr-wrapper">
                {{ page_heading_social_movie }}
            </div>
        </div>
    </div>
    {% endif %}
</div>
