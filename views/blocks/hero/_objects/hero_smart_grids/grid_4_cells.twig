{% set count = more_imgs|length - 3 %}
<div class="grid-x grid-padding-x align-stretch{{ count > 0 ? ' isRel' }}">
    {% if parallax %}
    <div class="rellax" data-rellax-speed="2">
    {% endif %}
        <div class="cell xmedium-6 {{ page_heading_media_type|default }}{{ page_heading_social_movie ? ' embed-plyr' }}">
            {% set desktopImgSize = 'ratio_4_3' %}
             {% set ratio = false %}
            {{ block("heroMediaWrapper", "blocks/hero/tpl_04/tpl.twig") }}
        </div>

    {% if parallax %}
    </div>
    {% endif %}
    <div class="cell xmedium-3">
        {% for item in more_imgs[:2] %}
            <div class="subcell {{ loop.first ? ' padd-bottom-md' }}">
                {% include 'cards/media_card/tpl_01/tpl.twig' with {
                    'image_style' : 'ratio_4_3',
                    'hide_caption' : true,
                    'gallery_lightbox' : true,
                    'woody_gallery_id' : 'hero-thumbs'
                }%}
            </div>
        {% endfor %}
    </div>
    <div class="cell xmedium-3">
    {% for item in more_imgs[2:1] %}
        {% include 'cards/media_card/tpl_01/tpl.twig' with {
            'image_style' : 'ratio_10_16',
            'hide_caption' : true,
            'gallery_lightbox' : true,
            'woody_gallery_id' : 'hero-thumbs'
        }%}
    {% endfor %}
    </div>
    {% if count > 0 %}
        {% include 'blocks/hero/_objects/more_imgs_list.twig' with {
            'items' : more_imgs[3:],
            'moreImgsMaxItems' : 1,
            'listDirection' : 'single',
            'thumbRatio' : 'ratio_3_1'
        } %}
    {% endif %}
</div>
