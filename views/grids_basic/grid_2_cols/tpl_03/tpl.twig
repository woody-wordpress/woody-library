{% extends '_objects/gridObject.twig' %}
{% block grid_items %}
<div class="grid_2col_tpl_03 grid-x {{ alignment|default }} {{ no_padding == 0 ? ' grid-padding-x grid-padding-y' }}">
    {% if items|default %}
        {% for key, item in items %}
            {% if loop.index0 is even %}
                <div class="cell large-4">
                    {{ item }}
                </div>
            {% elseif loop.index0 is odd %}
                <div class="cell large-8">
                    {{ item }}
                </div>
            {% endif %}
        {% endfor %}
    {% endif %}
</div>
{% endblock %}
